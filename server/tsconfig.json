        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./",
        "strict": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "resolveJsonModule": true

    },
    "include": ["**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}